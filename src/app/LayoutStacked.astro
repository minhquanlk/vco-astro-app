---
import FooterStacked from './FooterStacked.astro';
import LayoutCommon from './LayoutCommon.astro';
import NavBarStacked from './NavBarStacked.astro';

---

<LayoutCommon>
	<NavBarStacked />

	<div class="flex pt-16 overflow-hidden bg-zinc-50 dark:bg-zinc-900">
		<div
			id="main-content"
			class="relative w-full h-full overflow-y-auto bg-zinc-50 dark:bg-zinc-900 min-h-screen"
		>
			<div class="px-4 2xl:px-0">
				<slot />
			</div>

			<FooterStacked />
		</div>
	</div>
</LayoutCommon>
